<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", required: false)
    @Scripts.Render("~/bundles/modernizr")

    <!-- Enhanced CSS Libraries -->
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <style>
        :root {
            --sidebar-width: 280px;
            --primary-color: #4e73df;
            --secondary-color: #858796;
            --success-color: #1cc88a;
            --info-color: #36b9cc;
            --warning-color: #f6c23e;
            --danger-color: #e74a3b;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fc;
        }

        /* Sidebar - Enhanced from your original */
        .sidebar {
            min-height: 100vh;
            width: var(--sidebar-width);
            background: linear-gradient(180deg, #2c3e50 0%, #1a252f 100%);
            color: white;
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.1);
        }

        .sidebar-brand {
            padding: 1.5rem 1rem;
            font-size: 1.2rem;
            font-weight: 700;
            color: white;
            text-align: center;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .sidebar .nav-link {
            color: rgba(255,255,255,0.7);
            padding: 0.75rem 1rem;
            margin: 0.25rem 1rem;
            border-radius: 0.25rem;
            transition: all 0.3s;
        }

            .sidebar .nav-link:hover,
            .sidebar .nav-link.active {
                color: white;
                background-color: rgba(255,255,255,0.15);
            }

            .sidebar .nav-link i {
                width: 1.5rem;
                text-align: center;
                margin-right: 0.5rem;
            }

        .badge-counter {
            position: absolute;
            right: 0.5rem;
            font-size: 0.6rem;
            padding: 0.25rem 0.4rem;
        }

        /* Main Content Area */
        .main-content {
            width: calc(100% - var(--sidebar-width));
            min-height: 100vh;
            padding: 1.5rem;
        }

        /* Cards */
        .card {
            border: none;
            border-radius: 0.35rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            margin-bottom: 1.5rem;
        }

        .card-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
            font-weight: 600;
            padding: 1rem 1.35rem;
        }

        /* Status Badges */
        .badge-primary {
            background-color: var(--primary-color);
        }

        .badge-success {
            background-color: var(--success-color);
        }

        .badge-info {
            background-color: var(--info-color);
        }

        .badge-warning {
            background-color: var(--warning-color);
        }

        .badge-danger {
            background-color: var(--danger-color);
        }

        /* Responsive Fixes */
        @@media (max-width: 768px) {
            .sidebar {
                margin-left: -280px;
            }

                .sidebar.toggled {
                    margin-left: 0;
                }

            .main-content {
                width: 100%;
            }

                .main-content.toggled {
                    width: calc(100% - 280px);
                }
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar - Enhanced but keeping your structure -->
        <div class="sidebar">
            <div class="sidebar-brand">
                <i class="fas fa-lock me-2"></i>
                <span>Admin Panel</span>
            </div>
            <hr class="mt-0 mb-2" style="border-color: rgba(255,255,255,0.1);">

            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="@Url.Action("Dashboard", "Admin")"
                       class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")">
                        <i class="fas fa-tachometer-alt"></i>
                        Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a href="@Url.Action("Users", "Admin")"
                       class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Users" ? "active" : "")">
                        <i class="fas fa-users"></i>
                        Users
                        @if (ViewBag.NewUsersCount > 0)
                        {
                            <span class="badge badge-danger badge-counter">@ViewBag.NewUsersCount</span>
                        }
                    </a>
                </li>

                <li class="nav-item">
                    <a href="@Url.Action("Index", "AdminCategories")"
                       class="nav-link @(Request.Url.AbsolutePath.ToLower().Contains("/AdminCategories/Categories") ? "active" : "")">
                        <i class="fas fa-tags"></i>
                        Categories
                    </a>
                </li>

                <li class="nav-item">
                    <a href="@Url.Action("Index", "AdminProducts")"
                       class="nav-link @(Request.Url.AbsolutePath.ToLower().Contains("/admin/products") ? "active" : "")">
                        <i class="fas fa-boxes"></i>
                        Products
                        @if (ViewBag.LowStockCount > 0)
                        {
                            <span class="badge badge-warning badge-counter">@ViewBag.LowStockCount</span>
                        }
                    </a>
                </li>

                <!-- Added Orders Section -->
                <li class="nav-item">
                    <a href="@Url.Action("Orders", "Admin")"
                       class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Orders" ? "active" : "")">
                        <i class="fas fa-shopping-cart"></i>
                        Orders
                        @if (ViewBag.NewOrdersCount > 0)
                        {
                            <span class="badge badge-danger badge-counter">@ViewBag.NewOrdersCount</span>
                        }
                    </a>
                </li>

                <!-- Added Payments Section -->
                <li class="nav-item">
                    <a href="@Url.Action("Payments", "Admin")"
                       class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Payments" ? "active" : "")">
                        <i class="fas fa-credit-card"></i>
                        Payments
                    </a>
                </li>

                <!-- Added Earnings Section -->
                <li class="nav-item">
                    <a href="@Url.Action("Earnings", "Admin")"
                       class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Earnings" ? "active" : "")">
                        <i class="fas fa-chart-line"></i>
                        Earnings
                    </a>
                </li>

                <!-- Added Refunds Section -->
                <li class="nav-item">
                    <a href="@Url.Action("RefundRequests", "Admin")"
                       class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "RefundRequests" ? "active" : "")">
                        <i class="fas fa-exchange-alt"></i>
                        Refund Requests
                        @if (ViewBag.RefundRequestsCount > 0)
                        {
                            <span class="badge badge-danger badge-counter">@ViewBag.RefundRequestsCount</span>
                        }
                    </a>
                </li>


                <!-- Analytics Section -->
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#analyticsSubmenu" data-bs-toggle="collapse" role="button" aria-expanded="false" aria-controls="analyticsSubmenu">
                        <i class="fas fa-chart-pie"></i> Analytics
                    </a>
                    <div class="collapse" id="analyticsSubmenu">
                        <ul class="nav flex-column ms-3">
                            <li class="nav-item">
                                <a href="@Url.Action("BestSellingProducts", "AdminAnalytics")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "BestSellingProducts" ? "active" : "")">
                                    <i class="fas fa-star"></i> Best Selling Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("TopCustomers", "AdminAnalytics")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "TopCustomers" ? "active" : "")">
                                    <i class="fas fa-user-friends"></i> Top Customers
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>

                <!-- Coupons Section -->
                <li class="nav-item">
                    <a href="@Url.Action("Index", "AdminCoupons")"
                       class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "AdminCoupons" ? "active" : "")">
                        <i class="fas fa-ticket-alt"></i> Coupons
                    </a>
                </li>

                <li class="nav-item">
                    <a href="@Url.Action("Logout", "Account")"
                       class="nav-link text-danger d-flex align-items-center gap-2 @(ViewContext.RouteData.Values["Action"].ToString() == "Logout" ? "active fw-bold" : "")">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Logout</span>
                    </a>
                </li>

            </ul>

            <hr class="mt-auto mb-2" style="border-color: rgba(255,255,255,0.1);">

            <div class="px-3 py-2">
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                       id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://via.placeholder.com/30" alt="User" class="rounded-circle me-2" width="30" height="30">
                        <strong>@Session["UserName"]</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser">
                        <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i> Profile</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i> Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")"><i class="fas fa-sign-out-alt me-2"></i> Sign out</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand navbar-light bg-white shadow-sm mb-4 rounded">
                <div class="container-fluid">
                    <button class="btn btn-link d-md-none" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="d-flex align-items-center">
                        <h4 class="mb-0">@ViewBag.Title</h4>
                    </div>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bell"></i>
                                @if (ViewBag.NotificationCount > 0)
                                {
                                    <span class="badge badge-danger badge-counter">@ViewBag.NotificationCount</span>
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><h6 class="dropdown-header">Notifications</h6></li>
                                @if (ViewBag.NewOrdersCount > 0)
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Orders", "Admin")">
                                            <i class="fas fa-shopping-cart text-primary me-2"></i>
                                            @ViewBag.NewOrdersCount new orders
                                        </a>
                                    </li>
                                }
                                @if (ViewBag.RefundRequestsCount > 0)
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("RefundRequests", "Admin")">
                                            <i class="fas fa-exchange-alt text-warning me-2"></i>
                                            @ViewBag.RefundRequestsCount refund requests
                                        </a>
                                    </li>
                                }
                                @if (ViewBag.LowStockCount > 0)
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index", "AdminProducts")">
                                            <i class="fas fa-boxes text-danger me-2"></i>
                                            @ViewBag.LowStockCount low stock items
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Page Content -->
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Add these required scripts -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>

    <!-- Enhanced JavaScript Libraries -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.print.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(document).ready(function() {
            // Initialize all Bootstrap dropdowns
            var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'))
            var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
                return new bootstrap.Dropdown(dropdownToggleEl)
            });

            // Toggle sidebar on mobile
            $('#sidebarToggle').click(function() {
                $('.sidebar').toggleClass('toggled');
                $('.main-content').toggleClass('toggled');
            });

            // Initialize DataTables with export buttons
            $('.data-table').DataTable({
                responsive: true,
                dom: '<"top"Bf>rt<"bottom"lip><"clear">',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });

            // Show toast notifications
            @if (TempData["SuccessMessage"] != null)
            {
                @:toastr.success('@TempData["SuccessMessage"]');
            }
            @if (TempData["ErrorMessage"] != null)
            {
                @:toastr.error('@TempData["ErrorMessage"]');
            }
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>