$(document).ready(function() {
    // Load cart when modal is shown
    $('#cartModal').on('shown.bs.modal', function() {
        loadCart();
    });

    // Apply coupon
    $('#applyCoupon').click(function() {
        var couponCode = $('#couponCode').val().trim();
        if (!couponCode) {
            $('#couponMessage').html('<div class="alert alert-danger">Please enter a coupon code</div>');
            return;
        }

        $.ajax({
            url: '@Url.Action("ApplyCoupon", "Customer")',
            type: 'POST',
            data: {
                couponCode: couponCode
            },
            headers: {
                'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
            },
            success: function(response) {
                if (response.success) {
                    $('#couponMessage').html('<div class="alert alert-success">Coupon applied successfully!</div>');
                    $('#couponCode').prop('disabled', true);
                    $('#applyCoupon').hide();
                    $('#removeCoupon').show();
                    updateCartTotal(response.newTotal);
                    if (response.discountType && response.discountValue) {
                        var discountText = response.discountType === "Percentage" ?
                            response.discountValue + '% discount applied' :
                            '$' + response.discountValue + ' discount applied';
                        $('#discountInfo').text(discountText).show();
                    }
                    loadCart(); // Refresh cart display
                } else {
                    $('#couponMessage').html('<div class="alert alert-danger">' + response.message + '</div>');
                }
            },
            error: function(xhr) {
                try {
                    const response = JSON.parse(xhr.responseText);
                    $('#couponMessage').html('<div class="alert alert-danger">' + (response.message || 'Error applying coupon') + '</div>');
                } catch(e) {
                    $('#couponMessage').html('<div class="alert alert-danger">Error applying coupon</div>');
                }
            }
        });
    });

    // Remove coupon
    $('#removeCoupon').click(function() {
        $.ajax({
            url: '@Url.Action("RemoveCoupon", "Customer")',
            type: 'POST',
            headers: {
                'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
            },
            success: function(response) {
                if (response.success) {
                    $('#couponMessage').html('<div class="alert alert-success">Coupon removed successfully</div>');
                    $('#couponCode').val('').prop('disabled', false);
                    $('#applyCoupon').show();
                    $('#removeCoupon').hide();
                    $('#discountInfo').hide();
                    updateCartTotal(response.newTotal);
                    loadCart(); // Refresh cart display
                } else {
                    $('#couponMessage').html('<div class="alert alert-danger">' + response.message + '</div>');
                }
            },
            error: function(xhr) {
                try {
                    const response = JSON.parse(xhr.responseText);
                    $('#couponMessage').html('<div class="alert alert-danger">' + (response.message || 'Error removing coupon') + '</div>');
                } catch(e) {
                    $('#couponMessage').html('<div class="alert alert-danger">Error removing coupon</div>');
                }
            }
        });
    });

    // Checkout button
    $('#checkoutButton').click(function() {
        window.location.href = '@Url.Action("Checkout", "Customer")';
    });
});

function loadCart() {
    $.get('@Url.Action("GetCart", "Customer")', function(data) {
        $('#cartContent').html(data);
        updateCartTotal();
    }).fail(function() {
        $('#cartContent').html('<div class="alert alert-danger">Failed to load cart. Please try again.</div>');
    });
}

function updateCartTotal(total) {
    if (total === undefined) {
        // Calculate total from cart items if not provided
        total = 0;
        $('.cart-item-price').each(function() {
            var price = parseFloat($(this).data('price'));
            var quantity = parseInt($(this).closest('tr').find('.quantity').val());
            total += price * quantity;
        });
    }
    $('#cartTotal').text('$' + total.toFixed(2));
}

function updateCartCount() {
    $.get('@Url.Action("GetCartCount", "Customer")', function(data) {
        if (data.count !== undefined) {
            $('#cart-count').text(data.count);
        }
    });
}
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
