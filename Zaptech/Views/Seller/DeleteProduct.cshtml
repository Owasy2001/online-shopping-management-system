@model Zaptech.Models.Product
@{
    ViewBag.Title = "Delete Product";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}
<br />
<br />

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h3 class="card-title">Delete Product</h3>
    </div>
    <div class="card-body">
        <h5>Are you sure you want to delete this product?</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@(Model.Category?.Name ?? "N/A")</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">$@Model.Price.ToString("0.00")</dd>

            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">@Model.Stock</dd>

        </dl>

        @using (Html.BeginForm("DeleteProduct", "Seller", new { id = Model.Id }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="mt-4">
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
                <a href="@Url.Action("Products", "Seller")" class="btn btn-secondary">Cancel</a>
            </div>
        }
    </div>
</div>
