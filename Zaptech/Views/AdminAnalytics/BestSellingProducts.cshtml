@model List<Zaptech.Models.BestSellingProductVM>

@{
    ViewBag.Title = "Best Selling Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Best Selling Products</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="@Url.Action("ExportBestSellersPDF", new { days = ViewBag.Days })"
           class="btn btn-sm btn-danger">
            <i class="bi bi-file-pdf"></i> Export PDF
        </a>
    </div>
</div>

@using (Html.BeginForm("BestSellingProducts", "AdminAnalytics", FormMethod.Get))
{
    <div class="row mb-3">
        <div class="col-md-3">
            <div class="input-group">
                <span class="input-group-text">Last</span>
                <input type="number" name="days" value="@ViewBag.Days" class="form-control" min="1">
                <span class="input-group-text">days</span>
            </div>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Product</th>
                <th>Category</th>
                <th>Units Sold</th>
                <th>Total Revenue</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            @if (item.Product != null && !string.IsNullOrEmpty(item.Product.Image))
                            {
                                <img src="@item.Product.Image" class="rounded me-2" width="40" height="40">
                            }
                            <div>
                                <strong>@(item.Product?.Name ?? "Unknown Product")</strong><br />
                                <small class="text-muted">@(item.Product?.Brand_Name ?? "-")</small>
                            </div>
                        </div>
                    </td>
                    <td>@(item.Product?.Category?.Name ?? "-")</td>
                    <td>@item.TotalSold</td>
                    <td>@item.TotalRevenue.ToString("C")</td>
                </tr>
            }

        </tbody>
    </table>
</div>