@{
    ViewBag.Title = "Login";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 500px; border-radius: 15px; border: none;">
        <div class="card-body">
            <div class="text-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="#0d6efd" class="bi bi-person-circle" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                </svg>
                <h2 class="mt-3" style="color: #2c3e50;">Welcome Back</h2>
                <p class="text-muted">Please enter your credentials to login</p>
            </div>

            @if (ViewBag.LoginFailed != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.LoginFailed
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form method="post" action="@Url.Action("Login", "Account")">
                <div class="mb-4">
                    <label for="email" class="form-label" style="color: #2c3e50; font-weight: 500;">Email</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#7f8c8d" class="bi bi-envelope" viewBox="0 0 16 16">
                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                            </svg>
                        </span>
                        <input type="email" class="form-control" id="email" name="email" required placeholder="Enter your email" style="border-left: none; padding-left: 0;" />
                    </div>
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label" style="color: #2c3e50; font-weight: 500;">Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#7f8c8d" class="bi bi-lock" viewBox="0 0 16 16">
                                <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z" />
                            </svg>
                        </span>
                        <input type="password" class="form-control" id="password" name="password" required placeholder="Enter your password" style="border-left: none; padding-left: 0;" />
                    </div>
                </div>

                <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn btn-primary btn-lg" style="background: linear-gradient(to right, #3498db, #2c3e50); border: none; padding: 10px; border-radius: 8px;">
                        Login
                    </button>
                </div>

                <div class="text-center mt-3">
                    <a href="#" class="text-decoration-none" style="color: #7f8c8d;">Forgot password?</a>
                </div>
            </form>

            <div class="text-center mt-4" style="color: #7f8c8d;">
                <p>Don't have an account? <a href="@Url.Action("Register", "Account")" class="text-decoration-none" style="color: #3498db; font-weight: 500;">Register</a></p>
            </div>
        </div>
    </div>
</div>