@model Zaptech.Models.Product

@{
    ViewBag.Title = "Product Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Delete Product</h3>
    </div>
    <div class="card-body">
        <h4>Are you sure you want to delete this product?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Stock)</dd>

            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    <img src="@Model.Image" alt="@Model.Name" class="img-fluid" style="max-height: 100px;">
                </dd>
            }
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>