
@model Zaptech.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Product Details</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Stock > 10 ? "badge-success" : Model.Stock > 0 ? "badge-warning" : "badge-danger")">
                    @Html.DisplayFor(model => model.Stock)
                </span>
            </dd>

            <dt class="col-sm-3">Brand</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Brand_Name)</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.IsActive ? "badge-success" : "badge-secondary")">
                    @(Model.IsActive ? "Active" : "Inactive")
                </span>
            </dd>

            <dt class="col-sm-3">Featured</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.IsFeatured ? "badge-primary" : "badge-secondary")">
                    @(Model.IsFeatured ? "Yes" : "No")
                </span>
            </dd>

            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

            <dt class="col-sm-3">Last Updated</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.LastUpdated)</dd>

            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    <img src="@Model.Image" alt="@Model.Name" class="img-fluid" style="max-height: 200px;">
                </dd>
            }
        </dl>
    </div>
    <div class="card-footer">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
