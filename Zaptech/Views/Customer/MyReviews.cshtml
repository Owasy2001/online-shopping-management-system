@model IEnumerable<Zaptech.Models.Review>

@{
    ViewBag.Title = "My Reviews";
}

<div class="container mt-4">
    <h2>My Reviews</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">You haven't reviewed any products yet.</div>
    }
    else
    {
        foreach (var review in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2">
                            <img src="@review.Product.Image" alt="@review.Product.Name" class="img-thumbnail" />
                        </div>
                        <div class="col-md-10">
                            <h4>@review.Product.Name</h4>
                            <div class="text-warning">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <span>@(i <= review.Rating ? "★" : "☆")</span>
                                }
                            </div>
                            <p class="text-muted small">Reviewed on @review.Created_at.ToString("MMMM dd, yyyy")</p>
                            <p>@review.Comment</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>