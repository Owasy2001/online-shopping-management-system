@model Zaptech.Models.Order

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Receipt</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

        .receipt-item {
            margin-bottom: 10px;
        }

        .total {
            font-weight: bold;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h2>Order Receipt</h2>
        <p>Order #@Model.Id</p>
        <p>Date: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
    </div>

    <div>
        <p>Customer Email: @Session["UserEmail"]</p>
    </div>

    <h3>Items:</h3>
    @foreach (var item in Model.OrderItems)
    {
        <div class="receipt-item">
            <p>Product: @item.Product.Name</p>
            <p>Price: $@item.Price</p>
            <p>Quantity: @item.Quantity</p>
        </div>
    }

    <div class="total">
        <p>Total Amount: $@Model.Total_ammount</p>
    </div>
</body>
</html>