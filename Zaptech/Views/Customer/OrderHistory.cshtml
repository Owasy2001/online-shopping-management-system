@model IEnumerable<Zaptech.Models.Order>

@{
    ViewBag.Title = "Order History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Order History</h2>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="orderTable">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Date</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Payment</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.Order_date.ToString("d")</td>
                            <td>@order.OrderItems.Count</td>
                            <td>$@order.Total_ammount</td>
                            <td>
                                <span class="badge bg-@(order.Status == "Completed" ? "success" : "warning")">
                                    @order.Status
                                </span>
                            </td>
                            <td>
                                @if (order.Payment != null)
                                {
                                    <span class="badge bg-@(order.Payment.Status == "Paid" ? "success" : "danger")">
                                        @order.Payment.Status
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Not Paid</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("OrderDetails", new { id = order.Id })" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                @if (order.Status == "Completed")
                                {
                                    <button class="btn btn-sm btn-outline-primary download-receipt" data-order-id="@order.Id">
                                        <i class="bi bi-download"></i> Receipt
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">You have no order history yet.</div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Download receipt
            $('.download-receipt').click(function () {
                var orderId = $(this).data('order-id');
                window.location.href = '@Url.Action("DownloadReceipt", "Customer")?id=' + orderId;
            });
        });
    </script>
}