@model Zaptech.Models.Order

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Checkout</h3>
                </div>
                <div class="card-body">
                    <h5>Order Summary</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Qty</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>@item.Product.Name</td>
                                    <td>$@item.Price</td>
                                    <td>@item.Quantity</td>
                                    <td>$@(item.Price * item.Quantity)</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3">Subtotal</th>
                                <th>$@Model.Total_ammount</th>
                            </tr>
                            <tr>
                                <th colspan="3">Tax</th>
                                <th>$0.00</th>
                            </tr>
                            <tr>
                                <th colspan="3">Total</th>
                                <th>$@Model.Total_ammount</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Payment</h3>
                </div>
                <div class="card-body">
                    <form id="payment-form">
                        <div id="card-element" class="mb-3">
                            <!-- Stripe Elements will be inserted here -->
                        </div>
                        <div id="card-errors" role="alert" class="text-danger mb-3"></div>
                        <button type="submit" class="btn btn-primary btn-block" id="submit-button">
                            Pay $@Model.Total_ammount
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        var stripe = Stripe('pk_test_51Pkce4JBm9gdgkjnV138ELY2sWWelQbghTM8GZezPpbHnehzbCtfDl4cHjPnl5JKR7Fyos8dhDEUe1zlynpB3NgQ00BO5OVkrC');
        var elements = stripe.elements();
        var cardElement = elements.create('card');
        cardElement.mount('#card-element');

        var form = document.getElementById('payment-form');
        form.addEventListener('submit', function (event) {
            event.preventDefault();

            $('#submit-button').prop('disabled', true);

            stripe.createToken(cardElement).then(function (result) {
                if (result.error) {
                    $('#card-errors').text(result.error.message);
                    $('#submit-button').prop('disabled', false);
                } else {
                    // Send the token to your server
                    $.post('@Url.Action("Checkout", "Customer")', {
                        stripeToken: result.token.id
                    }, function (response) {
                        if (response.success) {
                            window.location.href = response.redirectUrl;
                        } else {
                            $('#card-errors').text(response.message);
                            $('#submit-button').prop('disabled', false);
                        }
                    });
                }
            });
        });
    </script>
}