@model Zaptech.Models.CustomerDashboardViewModel

@{
    ViewBag.Title = "Customer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Welcome Card -->
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-primary text-white py-3 rounded-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="bi bi-person-circle me-2"></i> Welcome back, @Model.User.Name!</h4>
                        <a href="@Url.Action("EditProfile")" class="btn btn-light btn-sm rounded-pill">
                            <i class="bi bi-pencil-square me-1"></i> Edit Profile
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- User Details -->
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="bi bi-envelope text-primary fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted small">Email</h6>
                                    <p class="mb-0 fw-bold">@Model.User.Email</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="bi bi-telephone text-primary fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted small">Phone</h6>
                                    <p class="mb-0 fw-bold">@(string.IsNullOrEmpty(Model.User.Phone) ? "Not provided" : Model.User.Phone)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex align-items-center p-3 bg-light rounded">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="bi bi-house text-primary fs-4"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted small">Address</h6>
                                    <p class="mb-0 fw-bold">@(string.IsNullOrEmpty(Model.User.Address) ? "Not provided" : Model.User.Address)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Replace the Coupons Section with this Reviewed Products Section -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-star-fill"></i> Your Recent Reviews</h5>
                </div>
                <div class="card-body">
                    @if (Model.UserReviews != null && Model.UserReviews.Any())
                    {
                        <div class="list-group">
                            @foreach (var review in Model.UserReviews)
                            {
                                <div class="list-group-item border-0 py-3">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0 me-3">
                                            <img src="@review.Product.Image" alt="@review.Product.Name"
                                                 class="rounded" width="60" height="60">
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between">
                                                <h6 class="mb-1">@review.Product.Name</h6>
                                                <div class="text-warning">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        <i class="bi @(i <= review.Rating ? "bi-star-fill" : "bi-star")"></i>
                                                    }
                                                </div>
                                            </div>
                                            <p class="small mb-1">@review.Comment</p>
                                            <small class="text-muted">Reviewed on @review.Created_at.ToString("MMM dd, yyyy")</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="mt-3 text-end">
                            <a href="@Url.Action("MyReviews")" class="btn btn-sm btn-outline-primary">
                                View All Reviews <i class="bi bi-chevron-right"></i>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-star text-muted" style="font-size: 2rem;"></i>
                            <p class="mt-2">You haven't reviewed any products yet</p>
                            <a href="@Url.Action("OrderHistory")" class="btn btn-sm btn-outline-primary">
                                Review Your Purchases
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Recent Orders Section -->
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-gradient-primary text-white py-3 rounded-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="bi bi-clock-history me-2"></i> Recent Orders</h4>
                        <a href="@Url.Action("OrderHistory")" class="btn btn-light btn-sm rounded-pill">
                            View All <i class="bi bi-chevron-right ms-1"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Orders != null && Model.Orders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr>
                                            <td class="fw-bold">#@order.Id</td>
                                            <td>@order.Order_date.ToString("MMM dd, yyyy")</td>
                                            <td>@order.OrderItems.Count</td>
                                            <td class="fw-bold">$@order.Total_ammount.ToString("0.00")</td>
                                            <td>
                                                <span class="badge rounded-pill bg-@(order.Status == "Completed" ? "success" : "warning")">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <a href="@Url.Action("OrderDetails", new { id = order.Id })"
                                                   class="btn btn-sm btn-outline-primary rounded-pill">
                                                    <i class="bi bi-eye"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="bi bi-cart-x text-muted" style="font-size: 3rem;"></i>
                            </div>
                            <h5 class="mb-2">No orders yet</h5>
                            <p class="text-muted mb-4">You haven't placed any orders yet</p>
                            <a href="@Url.Action("Index", "CustomerProducts")" class="btn btn-primary rounded-pill px-4">
                                <i class="bi bi-cart-plus me-2"></i> Start Shopping
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Shopping Cart Card -->
            @if (Model.CurrentCart != null)
            {
                @Html.Partial("_DashboardCart", Model.CurrentCart)
            }
            else
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body text-center text-muted py-4">
                        <i class="bi bi-cart-x" style="font-size: 2rem;"></i>
                        <h5 class="mt-2">Your cart is empty</h5>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Apply coupon button click handler
            $('.apply-coupon').click(function() {
                var couponCode = $(this).data('code');
                var discountType = $(this).data('type');
                var discountValue = $(this).data('value');
                var minOrder = parseFloat($(this).data('min-order'));

                // Get current cart total
                var cartTotal = parseFloat('@Model.CartTotalAmount');

                // Validate minimum order amount
                if (minOrder > 0 && cartTotal < minOrder) {
                    alert(`This coupon requires a minimum order of $${minOrder.toFixed(2)}.`);
                    return;
                }

                // Calculate discount
                var discountAmount = discountType === "Percentage"
                    ? cartTotal * (discountValue / 100)
                    : discountValue;

                // Apply discount via AJAX
                $.ajax({
                    url: '@Url.Action("ApplyCoupon", "Customer")',
                    type: 'POST',
                    data: { couponCode: couponCode },
                    success: function(response) {
                        if (response.success) {
                            // Reload the page to update the cart with the discount
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Error applying coupon. Please try again.');
                    }
                });
            });

            // Remove coupon button click handler
            $('#remove-coupon').click(function() {
                $.ajax({
                    url: '@Url.Action("RemoveCoupon", "Customer")',
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    }
                });
            });
        });
    </script>
}
