@model PagedList.IPagedList<Zaptech.Models.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Rest of your view remains the same until the table -->

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Status</th>
                <th>Orders</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <span class="badge @(user.IsActive ? "bg-success" : "bg-danger")">
                            @(user.IsActive ? "Active" : "Blocked")
                        </span>
                    </td>
                    <td>@(user.Orders?.Count ?? 0)</td> <!-- Fixed line -->
                    <td>
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("UserDetails", new { id = user.Id })" class="btn btn-sm btn-primary">Details</a>
                            @using (Html.BeginForm("ToggleUserStatus", "Admin", new { id = user.Id }, FormMethod.Post, new { @class = "d-inline" }))
                            {
                                <button type="submit" class="btn btn-sm @(user.IsActive ? "btn-warning" : "btn-success")">
                                    @(user.IsActive ? "Block" : "Activate")
                                </button>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Rest of your view -->