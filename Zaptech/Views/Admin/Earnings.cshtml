

@model Zaptech.Models.EarningsViewModel

@{
    ViewBag.Title = "Earnings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Earnings Report</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Summary</h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Earnings", "Admin", FormMethod.Get))
            {
                <div class="row mb-3">
                    <div class="col-md-2">
                        <input type="date" name="fromDate" class="form-control" value="@ViewBag.FromDate?.ToString(" yyyy-MM-dd")" placeholder="From Date">
                    </div>
                    <div class="col-md-2">
                        <input type="date" name="toDate" class="form-control" value="@ViewBag.ToDate?.ToString(" yyyy-MM-dd")" placeholder="To Date">
                    </div>
                    <div class="col-md-2">
                        <select name="groupBy" class="form-control">
                            <option value="">All Data</option>
                            <option value="Daily" @(ViewBag.GroupBy == "Daily" ? "selected" : "")>Daily</option>
                            <option value="Monthly" @(ViewBag.GroupBy == "Monthly" ? "selected" : "")>Monthly</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">Filter</button>
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total Earnings
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">$@Model.TotalEarnings.ToString("N2")</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Total Orders
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalOrders</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.DailyEarnings != null && Model.DailyEarnings.Any())
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Daily Earnings</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Orders</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var day in Model.DailyEarnings)
                            {
                                <tr>
                                    <td>@day.Date.ToString("MMM dd, yyyy")</td>
                                    <td>@day.OrderCount</td>
                                    <td>$@day.TotalAmount.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (Model.MonthlyEarnings != null && Model.MonthlyEarnings.Any())
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Monthly Earnings</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Month</th>
                                <th>Year</th>
                                <th>Orders</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var month in Model.MonthlyEarnings)
                            {
                                <tr>
                                    <td>@month.MonthName</td>
                                    <td>@month.Year</td>
                                    <td>@month.OrderCount</td>
                                    <td>$@month.TotalAmount.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

