@model Zaptech.Models.Product

<div class="row">
    <div class="col-md-6">
        <img src="@Model.Image" class="img-fluid" alt="@Model.Name">
    </div>
    <div class="col-md-6">
        <h3>@Model.Name</h3>
        <p><strong>Price:</strong> $@Model.Price</p>
        <p><strong>Brand:</strong> @Model.Brand_Name</p>
        <p><strong>In Stock:</strong> @Model.Stock</p>
        <p><strong>Description:</strong></p>
        <p>@Model.Description</p>
    </div>
</div>
