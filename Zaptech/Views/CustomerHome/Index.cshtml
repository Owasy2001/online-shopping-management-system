@model Zaptech.Models.ViewModels.LandingPageViewModel
@{
    ViewBag.Title = "Welcome to Zaptech";
}

<style>
    .category-card {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s;
    }

        .category-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .active-category {
        border: 2px solid #007bff;
        background-color: #f8f9fa;
    }

    /* Custom scrollbar for category container */
    .overflow-auto::-webkit-scrollbar {
        height: 6px;
    }

    .overflow-auto::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    .overflow-auto::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 10px;
    }

        .overflow-auto::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
</style>
<!-- Banner Section -->
<div id="bannerCarousel" class="carousel slide mb-5" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Banners.Length; i++)
        {
            <li data-target="#bannerCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
        }
    </ol>

    <!-- Slides -->
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Banners.Length; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="container">
                    <div class="row align-items-center py-5">
                        <div class="col-md-6">
                            <h2>@Model.Banners[i].Title</h2>
                            <p class="lead">@Model.Banners[i].Description</p>
                            <a href="#" class="btn btn-primary btn-lg">@Model.Banners[i].CtaText</a>
                        </div>
                        <div class="col-md-6">
                            <img src="@Model.Banners[i].ImageUrl" class="d-block w-100" alt="@Model.Banners[i].Title">
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Controls -->
    <a class="carousel-control-prev" href="#bannerCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#bannerCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Categories Section -->
<section class="mb-5">
    <div class="container">
        <h2 class="text-center mb-4">Shop by Category</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-4 mb-4">
            <!-- 5 columns on medium screens and up -->
            @foreach (var category in Model.Categories)
            {
                <div class="col">
                    <div class="category-card @(category.Id == Model.DefaultCategoryId ? "active-category" : "")"
                         data-category-id="@category.Id">
                        <div class="card-body text-center">
                            <h5 class="card-title">@category.Name</h5>
                            <p class="card-text text-muted small">@category.Status</p>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div id="categoryProductsContainer" class="mt-4">
            @Html.Partial("_CategoryProducts", Model.DefaultCategoryProducts)
        </div>
    </div>


    
</section>

<!-- Recently Added Products -->
<section class="mb-5">
    <div class="container">
        <h2 class="text-center mb-4">Recently Added - 5% Discount</h2>
        <div class="row">
            @foreach (var product in Model.RecentProducts)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <img src="@product.Image" class="card-img-top" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">
                                <span class="text-muted text-decoration-line-through">$@product.Price</span>
                                <span class="text-danger">$@(product.Price * 0.95)</span>
                                <span class="badge bg-success">5% OFF</span>
                            </p>
                            @Html.ActionLink("View Details", "ProductDetails", new { id = product.Id }, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Coupon Section -->
<section class="mb-5 bg-light py-5">
    <div class="container text-center">
        <h2>Get Exclusive Coupons</h2>
        <p class="lead mb-4">Sign in to get special discounts on your favorite products</p>
        @Html.ActionLink("Get Your Coupon Now", "GetCoupon", null, new { @class = "btn btn-warning btn-lg" })
    </div>
</section>

<!-- Top Expensive Products -->
<section class="mb-5">
    <div class="container">
        <h2 class="text-center mb-4">Premium Collection</h2>
        <div class="row">
            @foreach (var product in Model.TopExpensiveProducts)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@product.Image" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-danger font-weight-bold">$@product.Price</p>
                        @Html.ActionLink("View Details", "ExpensiveProductDetails", new { id = product.Id }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        }
          


        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="mb-5">
    <div class="container">
        <h2 class="text-center mb-4">Frequently Asked Questions</h2>
        <div class="accordion" id="faqAccordion">
            @for (int i = 0; i < Model.Faqs.Length; i++)
            {
                <div class="card">
                    <div class="card-header" id="heading@i">
                        <h5 class="mb-0">
                            <button class="btn btn-link @(i != 0 ? "collapsed" : "")"
                                    type="button"
                                    data-toggle="collapse"
                                    data-target="#collapse@i"
                                    aria-expanded="@(i == 0 ? "true" : "false")"
                                    aria-controls="collapse@i">
                                @Model.Faqs[i].Question
                            </button>
                        </h5>
                    </div>
                    <div id="collapse@i" class="collapse @(i == 0 ? "show" : "")"
                         aria-labelledby="heading@i" data-parent="#faqAccordion">
                        <div class="card-body">
                            @Model.Faqs[i].Answer
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Top Reviews -->
<section class="mb-5">
    <div class="container">
        <h2 class="text-center mb-4">Customer Reviews</h2>
        <div class="row">
            @foreach (var review in Model.TopReviews)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="row no-gutters h-100">
                            <div class="col-md-4 d-flex align-items-center">
                                <img src="@review.Product.Image" class="card-img" alt="@review.Product.Name">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@review.Product.Name</h5>
                                    <div class="mb-2">
                                        @for (int i = 0; i < review.Rating; i++)
                                        {
                                            <span class="text-warning">★</span>
                                        }
                                        @for (int i = review.Rating; i < 5; i++)
                                        {
                                            <span class="text-muted">★</span>
                                        }
                                    </div>
                                    <p class="card-text">@review.Comment</p>
                                    <p class="card-text"><small class="text-muted">Reviwed by:- @review.User.Name</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Product Modal -->
<div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">Product Details</h5>
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>*@
            </div>
            <div class="modal-body" id="productModalBody">
                <!-- Content loaded via AJAX -->
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-primary">Add to Cart</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Handle category click
            $('.category-card').click(function () {
                $('.category-card').removeClass('active-category');
                $(this).addClass('active-category');

                var categoryId = $(this).data('category-id');
                $('#categoryProductsContainer').html('<div class="text-center py-5"><div class="spinner-border text-primary" role="status"><span class="sr-only">Loading...</span></div></div>');

                $.get('@Url.Action("CategoryProducts", "CustomerHome")', { id: categoryId }, function (data) {
                    $('#categoryProductsContainer').html(data);
                }).fail(function() {
                    $('#categoryProductsContainer').html('<div class="alert alert-danger">Failed to load products. Please try again.</div>');
                });
            });

            // Handle details button in loaded category products
            $(document).on('click', '.details-btn', function (e) {
                e.preventDefault();
                var productId = $(this).data('product-id');

                $.get('@Url.Action("ProductModal", "CustomerHome")', { id: productId }, function (data) {
                    $('#productModalBody').html(data);
                    $('#productModal').modal('show');
                });
            });
        });
    </script>
}
