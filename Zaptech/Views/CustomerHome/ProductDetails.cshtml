@model Zaptech.Models.Product

@{
    ViewBag.Title = Model.Name;
    var discounted = ViewBag.Discount != null;
}

<div class="container py-5">
    <div class="row g-5 align-items-center">
        <!-- Product Image -->
        <div class="col-md-6">
            <div class="border rounded shadow-sm p-3 bg-light" style="max-height: 500px; max-width: 100%; overflow: hidden;">
                <img src="@Model.Image" alt="@Model.Name" class="img-fluid w-100 rounded" style="object-fit: contain; height: 400px;">
            </div>
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h2 class="fw-bold">@Model.Name</h2>
            <p class="text-muted mb-2">@Model.Category.Name</p>

            <div class="mb-3">
                @if (discounted)
                {
                    <h4>
                        <span class="text-muted text-decoration-line-through me-2">$@Model.Price</span>
                        <span class="text-danger fw-bold">$@ViewBag.DiscountedPrice</span>
                        <span class="badge bg-success ms-2">5% OFF</span>
                    </h4>
                }
                else
                {
                    <h4 class="text-primary fw-bold">$@Model.Price</h4>
                }
            </div>

            <!-- Quantity Selector -->
            <div class="mb-4 d-flex align-items-center gap-2">
                <h4 class="text-primary fw-bold">Total in stock:- @Model.Stock</h4>
            </div>

            <!-- Buttons Row -->
            <div class="d-flex gap-3">
            
                @Html.ActionLink("Back to Home", "Index", null, new { @class = "btn btn-outline-dark px-4" })
            </div>

            <!-- Description -->
            <div class="mt-5">
                <h5 class="mb-2">Description</h5>
                <p class="text-secondary">@Model.Description</p>
            </div>
        </div>
    </div>
</div>

