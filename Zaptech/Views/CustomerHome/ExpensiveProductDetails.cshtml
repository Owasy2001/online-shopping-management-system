@model Zaptech.Models.Product

@{
    ViewBag.Title = Model.Name;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="row shadow rounded-4 overflow-hidden bg-white">
                <!-- Image Section -->
                <div class="col-md-6 p-4 bg-light d-flex align-items-center justify-content-center">
                    <div style="width: 100%; height: 100%; max-height: 450px; max-width: 100%; overflow: hidden; border-radius: 20px;">
                        <img src="@Model.Image" alt="@Model.Name" class="img-fluid w-100 h-100" style="object-fit: contain;">
                    </div>
                </div>

                <!-- Product Info -->
                <div class="col-md-6 p-5">
                    <h2 class="fw-bold">@Model.Name</h2>
                    <p class="text-muted mb-2">@Model.Category.Name</p>

                    <!-- Price Badge -->
                    <div class="mb-4">
                        <span class="badge bg-gradient bg-danger fs-5 px-3 py-2">$@Model.Price</span>
                    </div>

                    <!-- Quantity Selector -->
                    <div class="d-flex align-items-center mb-4">
                        @*<label for="quantity" class="form-label mb-0 me-3">Quantity:</label>
        <div class="input-group" style="width: 140px;">
            <button class="btn btn-outline-secondary" type="button" onclick="adjustQty(-1)">-</button>
            <input type="number" id="quantity" class="form-control text-center" value="1" min="1" max="@Model.Stock">
            <button class="btn btn-outline-secondary" type="button" onclick="adjustQty(1)">+</button>
        </div>*@
                        <div class="mb-4">
                            <span class="badge bg-gradient bg-danger fs-5 px-3 py-2">In Stock:- @Model.Stock</span>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-3">
                       
                        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-outline-dark px-4" })
                    </div>

                    <!-- Description -->
                    <div class="mt-5">
                        <h5>Description</h5>
                        <p class="text-secondary">@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

